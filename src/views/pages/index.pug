extends ../auth.layout.pug

block variables
  - var userAbout = 'user--welcome'
  - var userPicWelcome = 'user__pic--welcome'
  - var userTitleWelcome = 'user__name--welcome'
  - var userSubtitleWelcome = 'user__subtitle--welcome'
  - var anotherfooterclass = 'footer--welcome'
  
    block scripts
    script(src='about.bundle.js')

block content

  .wrapper
    .welcome
     


      .auth
        a(href="#").btn.btn--auth Авторизоваться

      .welcome__container
        .welcome__form
          block form
          include ../common/form

        .welcome__info  
          .welcome__user
            block user 
            include ../common/user

            .welcome__social
              block social 
              include ../common/socials

        block navigation 
        .welcome__navigation
          nav.navigation.navigation--auth
              ul.navigation__list.navigation__list--auth
                  each link, page in {'Мои работы': './works.html', 'Обо мне': './about.html', 'Блог': './blog.html'}
                      li.navigation__item.navigation__item--auth
                          a(href=link).navigation__link.navigation__link--auth=page


    block footer 
    include ../common/footer

  
